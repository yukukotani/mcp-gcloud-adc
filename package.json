{
  "name": "mcp-gcloud-adc",
  "version": "1.0.0",
  "type": "module",
  "description": "Google Cloud Run MCP Server Proxy with ADC authentication",
  "main": "dist/index.js",
  "bin": {
    "mcp-gcloud-proxy": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint:biome": "biome check .",
    "lint:tsc": "tsc --noEmit",
    "lint": "pnpm --parallel run '/^lint:/'",
    "fix": "biome check --write ."
  },
  "keywords": ["mcp", "google-cloud", "cloud-run", "proxy", "adc"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "google-auth-library": "^9.15.0",
    "gunshi": "^0.26.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@power-assert/runtime": "^0.3.0",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "rollup-plugin-power-assert": "^0.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
