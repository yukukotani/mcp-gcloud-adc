{
  "name": "mcp-gcloud-adc",
  "description": "An auth proxy for accessing remote MCP servers using Google Cloud Application Default Credentials (ADC)",
  "version": "0.1.0",
  "keywords": [
    "mcp",
    "model context protocol",
    "gcp",
    "google cloud"
  ],
  "author": "Yuku Kotani (y.kotani@dr-ubie.com)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/yukukotani/mcp-gcloud-adc"
  },
  "homepage": "https://github.com/yukukotani/mcp-gcloud-adc",
  "bugs": "https://github.com/yukukotani/mcp-gcloud-adc/issues",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/index.js",
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "debug": "MCP_PROXY_LOG_LEVEL=debug mcp-inspector tsx src/index.ts",
    "debug:build": "bun run build && mcp-inspector node dist/index.js",
    "inspector": "mcp-inspector tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint:biome": "biome check .",
    "lint:tsc": "tsc --noEmit",
    "lint:knip": "knip",
    "lint": "concurrently 'npm:lint:*'",
    "fix:biome": "biome check --write --unsafe .",
    "fix:knip": "knip --fix --allow-remove-files",
    "fix": "concurrently 'npm:fix:*'",
    "format": "biome format --write .",
    "prepublishOnly": "bun run build"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "google-auth-library": "^10.2.1",
    "gunshi": "^0.26.3",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@modelcontextprotocol/inspector": "^0.16.4",
    "@power-assert/runtime": "^0.3.0",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.0",
    "knip": "^5.43.0",
    "rollup-plugin-power-assert": "^0.2.0",
    "tsdown": "^0.14.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
